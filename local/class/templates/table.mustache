<div class="content-container">
Choose Program : 
<select id="choose_category" class="choose_category">
    {{#categories}}
    <option value="{{id}}" {{selected}}>{{name}}</option>
    {{/categories}}
</select>
</div>
<div class="content-container" id="data">
    {{#viewMentor}}
    <button type="button" class="btn btn-primary" onclick="location.href='{{addUrl}}'">Add New Course</button>
    <br><br>
    {{/viewMentor}}
    <table class="table table-bordered border-primary">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Status</th>
                <th scope="col">Program Name</th>
                <th scope="col">Course ID</th>
                <th scope="col">Course Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#classes}}
            <tr>
                <th scope="row">{{num}}</th>
                <td>
                    {{#visible}}Aktif{{/visible}}
                    {{^visible}}Non-Aktif{{/visible}}
                </td>
                <td>{{program_name}}</td>
                <td>{{idnumber}}</td>
                <td>{{fullname}}</td>
                <td class="action">
                    {{#viewMentor}}
                    <button type="button" class="btn btn-primary" onclick="location.href='{{addUrl}}?id={{id}}'"><i class="fa fa-pencil"></i></button>
                    {{/viewMentor}}
                    <button type="button" value="{{id}}" class="btn btn-info" onclick="location.href='{{viewUrl}}?id={{id}}'"><i class="fa fa-cog"></i></button>
                    {{#viewMentor}}
                    <button type="button" value="{{id}}" class="btn btn-danger local_class_delete_button"><i class="fa fa-trash"></i></button>
                    {{/viewMentor}}
                </td>
            </tr>
            {{/classes}}
        </tbody>
    </table>

</div>
